<MenuScreen>:
    MDBoxLayout:
        orientation: "vertical"
        padding: dp(20)
        spacing: dp(15)

        MDLabel:
            text: "Domino Scorebook"
            font_style: "H4"
            halign: "center"

        MDRaisedButton:
            text: "New Game"
            on_release: app.root.current = "select"

        MDRaisedButton:
            text: "Create Player"
            on_release: app.root.current = "create"

        MDRaisedButton:
            text: "History"
            on_release: app.root.current = "history"


<CreatePlayerScreen>:
    MDBoxLayout:
        orientation: "vertical"
        padding: dp(20)
        spacing: dp(20)

        MDTextField:
            id: player_name
            hint_text: "Player name"

        MDRaisedButton:
            text: "Save"
            on_release: root.save_player()


<PlayerSelectScreen>:
    MDBoxLayout:
        orientation: "vertical"
        padding: dp(20)

        ScrollView:
            MDBoxLayout:
                id: player_list
                orientation: "vertical"
                adaptive_height: True
                spacing: dp(10)

        MDRaisedButton:
            text: "Start Game"
            on_release: root.start()


<GameScreen>:
    ScrollView:
        MDBoxLayout:
            id: player_container
            orientation: "vertical"
            adaptive_height: True
            spacing: dp(10)
            padding: dp(10)


<HistoryScreen>:
    MDBoxLayout:
        orientation: "vertical"
        padding: dp(10)

        ScrollView:
            MDBoxLayout:
                id: history_list
                orientation: "vertical"
                adaptive_height: True

        MDRaisedButton:
            text: "Delete Selected"
            on_release: root.delete_selected()