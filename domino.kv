#:import dp kivy.metrics.dp

<MDSeparator>:
    size_hint_y: None
    height: root.thickness
    md_bg_color: root.color

<MenuScreen>:
    BoxLayout:
        orientation: "vertical"
        padding: dp(20)
        spacing: dp(20)

        MDLabel:
            text: root.get_fact()
            halign: "center"
            theme_text_color: "Secondary"

        MDRaisedButton:
            id: start_btn
            text: "Start Game"
            pos_hint: {"center_x": .5}
            on_release: app.root.current = "select"

        MDRaisedButton:
            id: history_btn
            text: "History"
            pos_hint: {"center_x": .5}
            on_release: app.root.current = "history"

        MDRaisedButton:
            text: "Options"
            pos_hint: {"center_x": .5}
            on_release: app.root.current = "options"

<CreatePlayerScreen>:
    BoxLayout:
        orientation: "vertical"
        padding: dp(20)
        spacing: dp(20)

        MDTextField:
            id: player_name
            hint_text: "Player name"

        MDRaisedButton:
            text: "Save"
            pos_hint: {"center_x": .5}
            on_release: root.save_player()

        MDRaisedButton:
            text: "Back"
            pos_hint: {"center_x": .5}
            on_release: app.root.current = "menu"

<PlayerSelectScreen>:
    BoxLayout:
        orientation: "vertical"
        padding: dp(20)
        spacing: dp(10)

        ScrollView:
            MDBoxLayout:
                id: player_list
                orientation: "vertical"
                adaptive_height: True
                spacing: dp(10)

        MDRaisedButton:
            text: "Start"
            pos_hint: {"center_x": .5}
            on_release: root.start()

        MDRaisedButton:
            text: "Back"
            pos_hint: {"center_x": .5}
            on_release: app.root.current = "menu"

<GameScreen>:
    BoxLayout:
        orientation: "vertical"
        padding: dp(10)
        spacing: dp(10)

        ScrollView:
            MDBoxLayout:
                id: player_container
                orientation: "vertical"
                adaptive_height: True
                spacing: dp(12)

        MDRaisedButton:
            text: "End Game"
            pos_hint: {"center_x": .5}
            on_release: app.finish_game()

<HistoryScreen>:
    BoxLayout:
        orientation: "vertical"
        padding: dp(10)
        spacing: dp(10)

        ScrollView:
            MDBoxLayout:
                id: history_list
                orientation: "vertical"
                adaptive_height: True
                spacing: dp(8)

        MDRaisedButton:
            text: "Back"
            pos_hint: {"center_x": .5}
            on_release: app.root.current = "menu"

<OptionsScreen>:
    BoxLayout:
        orientation: "vertical"
        padding: dp(20)
        spacing: dp(20)

        MDRaisedButton:
            text: "Export Saves"
            pos_hint: {"center_x": .5}
            on_release: root.export_saves()

        MDRaisedButton:
            text: "Import Saves"
            pos_hint: {"center_x": .5}
            on_release: root.import_saves()

        MDRaisedButton:
            text: "Back"
            pos_hint: {"center_x": .5}
            on_release: app.root.current = "menu"
